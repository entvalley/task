<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="entvalley.user_factory" class="Entvalley\AppBundle\Factory\UserFactory">
            <argument type="service" id="security.context" />
        </service>

        <service id="context.user" class="Entvalley\AppBundle\Entity\User"
             factory-service="entvalley.user_factory"
             factory-method="get">
        </service>

        <service id="entvalley.company_factory" class="Entvalley\AppBundle\Factory\CompanyFactory">
            <argument type="service" id="context.user" />
        </service>

        <service id="context.company" class="Entvalley\AppBundle\Entity\Company"
             factory-service="entvalley.company_factory"
             factory-method="get">
        </service>

        <service id="entvalley.command_create" class="Entvalley\AppBundle\Domain\Command\CreateCommand">
            <argument type="service" id="doctrine" />
            <argument type="service" id="context.user" />
        </service>

        <service id="entvalley.command_delete" class="Entvalley\AppBundle\Domain\Command\DeleteCommand">
            <argument type="service" id="doctrine" />
        </service>

        <service id="entvalley.command_add_comment" class="Entvalley\AppBundle\Domain\Command\AddCommentCommand">
            <argument type="service" id="doctrine" />
            <argument type="service" id="context.user" />
        </service>

        <service id="entvalley.command_abandon" class="Entvalley\AppBundle\Domain\Command\AbandonCommand">
            <argument type="service" id="doctrine" />
        </service>

        <service id="entvalley.command_close" class="Entvalley\AppBundle\Domain\Command\CloseCommand">
            <argument type="service" id="doctrine" />
        </service>

        <service id="entvalley.command_open" class="Entvalley\AppBundle\Domain\Command\OpenCommand">
            <argument type="service" id="doctrine" />
        </service>

        <service id="entvalley.command_take" class="Entvalley\AppBundle\Domain\Command\TakeCommand">
            <argument type="service" id="doctrine" />
        </service>

        <service id="entvalley.command_done" class="Entvalley\AppBundle\Domain\Command\DoneCommand">
            <argument type="service" id="doctrine" />
            <argument type="service" id="context.user" />
        </service>

        <service id="entvalley.command_registry" class="Entvalley\AppBundle\Domain\Command\CommandRegistry">
            <call method="register">
                <argument type="service" id="entvalley.command_create" />
            </call>
            <call method="register">
                <argument type="service" id="entvalley.command_delete" />
            </call>
            <call method="register">
                <argument type="service" id="entvalley.command_add_comment" />
            </call>
            <call method="register">
                <argument type="service" id="entvalley.command_close" />
            </call>
            <call method="register">
                <argument type="service" id="entvalley.command_open" />
            </call>
            <call method="register">
                <argument type="service" id="entvalley.command_take" />
            </call>
            <call method="register">
                <argument type="service" id="entvalley.command_done" />
            </call>
            <call method="register">
                <argument type="service" id="entvalley.command_abandon" />
            </call>
        </service>

        <service id="entvalley.command_interpreter" class="Entvalley\AppBundle\Domain\Command\CommandInterpreter">
            <argument type="service" id="entvalley.command_registry" />
        </service>

        <service id="entvalley.command_manager" class="Entvalley\AppBundle\Domain\Command\CommandManager">
            <argument type="service" id="entvalley.command_interpreter"/>
            <argument type="service" id="entvalley.command_registry" />
        </service>
    </services>

</container>
