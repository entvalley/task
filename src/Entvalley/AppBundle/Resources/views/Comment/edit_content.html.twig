<div style="
border: 1px solid #fff;
padding: 4px;
box-shadow: 0px 0px 0px 3px rgba(0, 0, 0, 0.1);
background-color: #fbfbfb;">
<form method="post" class="form-page form-horizontal edit-comment" action="{{ form_action }}" xmlns="http://www.w3.org/1999/html">
    <div class="control-group">
        {{ form_label(form.text, {}, { label_attr: { class: "control-label" } }) }}
        <div class="controls">
            {{ form_widget(form.text, { attr: { 'data-behaviour': 'autosize wysiwyg', 'class': 'span6'} }) }}
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            {{ form_widget(form._token) }}
            <input class="btn" type="submit" value="Save Changes"/>
            <a class="btn cancel" href="#cancel">Cancel</a
        </div>
    </div>
</form>
</div>