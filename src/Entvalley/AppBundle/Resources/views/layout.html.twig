<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{% block title "Entvalley Tasks" %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    {% stylesheets
        '@EntvalleyAppBundle/Resources/public/css/bootstrap.min.css'
        '@EntvalleyAppBundle/Resources/public/css/bootstrap-responsive.min.css'
        '@EntvalleyAppBundle/Resources/public/css/main.less'
        filter='cssrewrite'
        %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}

    <script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

</head>

<body>

<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">


            <div class="topbar">
                <img width="44" height="44" class="picture" src="{{ asset('/bundles/entvalleyapp/images/no-avatar.png') }}">
                <a class="username" href="{{ path('app_homepage') }}">{{ app.user.username }}</a>
                <ul class="user-links">
                    <li>profile</li>
                    <li>|</li>
                    <li>log out</li>
                </ul>
            </div>

            <div class="summary">
                <div class="done">
                    4
                    <p>Done</p>
                </div>
                <div class="inprogress">
                    12
                    <p>In progress</p>
                </div>
                <div class="unresolved">
                    14
                    <p>Unresolved</p>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="container">

    <div class="row">
        <div class="span12">
            {% for type, flashMessages in app.session.flashbag.all() %}
                {% for flashMessage in flashMessages %}
                    <div class="alert alert-{{ type }}">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        {{ flashMessage }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% block content %}
            {% endblock %}
        </div>
    </div>
    <div class="tools">
        {% render 'EntvalleyAppBundle:Command:form' %}
    </div>
</div>
<!-- /container -->



<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script src="{{ asset('bundles/entvalleyapp/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('bundles/entvalleyapp/js/jquery.autocomplete.js') }}"></script>
<script src="{{ asset('bundles/entvalleyapp/js/app.js') }}"></script>

</body>
</html>



